-- Create a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create a TextLabel for the neon effect
local textLabel = Instance.new("TextLabel")
textLabel.Parent = screenGui
textLabel.Text = "Thank you for 100K views On Verbal Hub Heres A Event For You ;)"
textLabel.Size = UDim2.new(0, 400, 0, 100)
textLabel.Position = UDim2.new(0.5, -200, 0.5, -50)  -- Centered position
textLabel.BackgroundTransparency = 1  -- No box behind the text
textLabel.Font = Enum.Font.GothamBlack
textLabel.TextScaled = true
textLabel.TextStrokeTransparency = 0.5  -- Neon glow effect
textLabel.TextStrokeColor3 = Color3.new(1, 1, 1)  -- White outline
textLabel.TextColor3 = Color3.new(1, 0, 0)  -- Start with red

-- Rainbow color effect function
local function rainbowEffect()
    local hue = 0
    while true do
        hue = (hue + 1) % 360
        textLabel.TextColor3 = Color3.fromHSV(hue / 360, 1, 1)  -- Change color continuously
        wait(0.05)  -- Speed of color change
    end
end

-- Start the rainbow effect
spawn(rainbowEffect)

-- Remove the text after 10 seconds
wait(10)
screenGui:Destroy()
